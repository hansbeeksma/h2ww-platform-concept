          "$value": "{semantic.color.learning-states.mastery}",
          "$description": "Advanced learner primary color"
        },
        "secondary": {
          "$value": "{core.color.learning-triad.primary.mastery.100}",
          "$description": "Advanced learner secondary color"
        }
      },
      "expert": {
        "primary": {
          "$value": "{semantic.color.learning-states.advanced}",
