      },
      "creative": {
        "$value": "{semantic.color.learning-states.innovation}",
        "$description": "Creative and innovative emotion"
      },
      "focused": {
        "$value": "{semantic.color.learning-states.practice}",
        "$description": "Focused practice and concentration"
      },
      "accomplished": {
        "$value": "{semantic.color.learning-states.advanced}",
        "$description": "Sense of accomplishment and mastery"
      }
    }
  }
