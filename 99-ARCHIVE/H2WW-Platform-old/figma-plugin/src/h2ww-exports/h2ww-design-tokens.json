  "component": {
    "button": {
      "primary": {
        "$type": "color",
        "background": {
          "default": {
            "$value": "{semantic.color.learning-states.energy}",
            "$description": "Primary button background"
          },
          "hover": {
            "$value": "{core.color.learning-triad.primary.ai-fundamentals.600}",
            "$description": "Primary button hover state"
          },
          "active": {
            "$value": "{core.color.learning-triad.primary.ai-fundamentals.700}",
            "$description": "Primary button active state"
          }
        },
        "text": {
          "$value": "{semantic.color.text.inverse}",
          "$description": "Primary button text color"
        }
      },
      "secondary": {
        "$type": "color", 
        "background": {
          "default": {
            "$value": "transparent",
            "$description": "Secondary button transparent background"
          },
          "hover": {
            "$value": "{core.color.learning-triad.primary.mastery.50}",
            "$description": "Secondary button hover background"
          }
        },
        "border": {
          "$value": "{core.color.learning-triad.primary.mastery.500}",
          "$description": "Secondary button border color"
        },
        "text": {
          "$value": "{core.color.learning-triad.primary.mastery.500}",
          "$description": "Secondary button text color"
        }
      }
    },
    "card": {
      "learning": {
        "$type": "color",
        "background": {
          "$value": "{semantic.color.background.primary}",
          "$description": "Learning card background"
        },
        "border": {
          "$value": "{semantic.color.border.primary}",
          "$description": "Learning card border"
        },
        "shadow": {
          "$value": "{core.shadow.base}",
          "$description": "Learning card shadow"
        }
      }
    },
    "ai-companion": {
      "avatar": {
        "$type": "dimension",
        "size": {
          "default": {
            "$value": "{geometric.shapes.circle.diameter}",
            "$description": "Default AI companion avatar size"
          },
          "large": {
            "$value": "80px",
            "$description": "Large AI companion avatar"
          },
          "small": {
            "$value": "32px",
            "$description": "Small AI companion avatar"
          }
        }
      },
      "states": {
        "$type": "color",
        "circle": {
          "background": {
            "$value": "linear-gradient(135deg, {semantic.color.learning-states.energy} 0%, {semantic.color.learning-states.discovery} 100%)",
            "$description": "Circle state gradient background"
          }
        },
        "square": {
          "background": {
            "$value": "{semantic.color.learning-states.mastery}",
            "$description": "Square state solid background"
          }
        },
        "triangle": {
          "background": {
            "$value": "linear-gradient(180deg, {semantic.color.learning-states.discovery} 0%, {semantic.color.learning-states.innovation} 100%)",
            "$description": "Triangle state upward gradient"
          }
        }
      }
    }
  },
  "learning-states": {
    "progression": {
      "$type": "color",
      "beginner": {
